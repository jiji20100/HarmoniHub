<?php
// Informations de connexion à la base de données
$host = 'localhost'; // Adresse du serveur de base de données
$utilisateur = 'samuel'; // Nom d'utilisateur de la base de données
$mot_de_passe = 'f9C89dYKn3'; // Mot de passe de la base de données
$base_de_donnees = 'web'; // Nom de la base de données

// Connexion à la base de données
try {
    $connexion = new PDO("mysql:host=$host;dbname=$base_de_donnees", $utilisateur, $mot_de_passe);
    // Configurer PDO pour afficher les erreurs SQL en cas de problème
    $connexion->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
} catch (PDOException $e) {
    die("Erreur de connexion à la base de données : " . $e->getMessage());
}
?>